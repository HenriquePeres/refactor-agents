{
  "name": "refactor-agents",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "packages/*",
    "packages/agents/*",
    "packages/agents/**"
  ],
  "scripts": {
    "build": "tsc -b",
    "dev:planner": "ts-node packages/agents/planner/index.ts",
    "dev:analyzer": "ts-node packages/agents/static-analyzer/index.ts",
    "dev:proposer": "ts-node packages/agents/proposer/index.ts",
    "dev:reviewer": "ts-node packages/agents/reviewer/index.ts",
    "dev:executor": "ts-node packages/agents/executor/index.ts",
    "dev:all": "run-p dev:*",
    "run": "ts-node packages/scripts/cli.ts"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "ioredis": "^5.4.1",
    "simple-git": "^3.24.0"
  }
}
